main: cli
name: local-module-completion-test
version: 1.0.0
description: Test for local module completion
modules:
  - module: cli
    version: latest
    with:
      additional_args: false
      args:
        - name: input
          index: 1
          type: string
          required: true
  - module: ./test-local-module
    with:
      # This should show completions from test-local-module.phlow
      host: localhost
      port: 3000
steps:
  - payload:
      message: !phs main.input
  - return: !phs `Hello, ${payload.message}!`
