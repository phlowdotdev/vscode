main: cli
name: Test CLI Array Properties
version: 1.0.0
description: Testing CLI module with array properties validation

modules:
  - module: cli
    version: latest
    with:
      additional_args: false
      args:
        - name: input
          description: Input parameter
          type: string
          required: true
          index: 1
          invalid_array_prop: "should show error"
        - name: output
          type: string
          wrong_prop: "should also show error"
          index: 2

steps:
  - return: "Test complete"
