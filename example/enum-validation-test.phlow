main: cli
name: enum-validation-test
version: 1.0.0
description: Test enum validation for module properties
modules:
  - module: cli
    version: latest
    with:
      additional_args: false
      args:
        - name: input
          description: Input parameter
          index: 1
          type: string
          required: true
  - module: test-enum-module
    with:
      # These should show enum completions and validation
      log_level: debug          # Valid enum value
      environment: development  # Valid enum value  
      ssl_mode: require         # Valid enum value
      invalid_value: xyz        # Should show error - not in enum
      port: 3000               # Non-enum property
steps:
  - payload:
      message: !phs main.input
  - return: !phs `Hello, ${payload.message}!`
