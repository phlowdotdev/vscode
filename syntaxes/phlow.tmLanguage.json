{
    "scopeName": "source.phlow",
    "name": "Phlow",
    "fileTypes": [
        "phlow"
    ],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#directives"
        },
        {
            "include": "#modules"
        },
        {
            "include": "#phs-tag"
        },
        {
            "include": "#phs-numeric-values"
        },
        {
            "include": "#phs-values"
        },
        {
            "include": "#special-keys"
        },
        {
            "include": "#constants-values"
        },
        {
            "include": "#keys"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.phlow",
                    "match": "#.*$"
                }
            ]
        },
        "phs-values": {
            "patterns": [
                {
                    "begin": "(?m)^(\\s*(?:-\\s*)?)([A-Za-z0-9_\\-\\.]+)(\\s*:\\s*)(?!$)(?!\\s*[\\[\\{\\|>])",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "entity.name.tag.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        }
                    },
                    "end": "$",
                    "name": "meta.mapping.value.phlow",
                    "patterns": [
                        {
                            "include": "source.phs"
                        }
                    ]
                }
            ]
        },
        "phs-tag": {
            "patterns": [
                {
                    "begin": "(?m)^(\\s*(?:-\\s*)?)([A-Za-z0-9_\\-\\.]+)(\\s*:\\s*)(!phs\\b\\s*)(?!\\s*[\\[\\{\\|>])",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "entity.name.tag.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "keyword.tag.phs"
                        }
                    },
                    "end": "$",
                    "name": "meta.mapping.value.phs-tag.inline",
                    "patterns": [
                        {
                            "include": "source.phs"
                        }
                    ]
                },
                {
                    "begin": "(?m)^(\\s*(?:-\\s*)?)([A-Za-z0-9_\\-\\.]+)(\\s*:\\s*)(!phs\\b\\s*\\$\\{)",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "entity.name.tag.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "keyword.tag.phs"
                        }
                    },
                    "end": "(?m)^\\s*\\}",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.section.block.end.phs"
                        }
                    },
                    "name": "meta.mapping.value.phs-tag.block",
                    "patterns": [
                        {
                            "include": "source.phs"
                        }
                    ]
                }
            ]
        },
        "phs-numeric-values": {
            "patterns": [
                {
                    "begin": "(?m)^(\\s*(?:-\\s*)?)([A-Za-z0-9_\\-\\.]+)(\\s*:\\s*)(?=\\s*\\d)",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "entity.name.tag.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        }
                    },
                    "end": "$",
                    "name": "meta.mapping.value.phlow.numeric",
                    "patterns": [
                        {
                            "include": "source.phs"
                        }
                    ]
                }
            ]
        },
        "directives": {
            "patterns": [
                {
                    "begin": "(?m)^(\\s*(?:-\\s*)?)(!include)\\b",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.directive.include.phlow"
                        }
                    },
                    "end": "$",
                    "name": "meta.directive.include.phlow",
                    "patterns": [
                        {
                            "include": "#directive-values"
                        }
                    ]
                },
                {
                    "begin": "(?m)^(\\s*(?:-\\s*)?)(!import)\\b",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.directive.import.phlow"
                        }
                    },
                    "end": "$",
                    "name": "meta.directive.import.phlow",
                    "patterns": [
                        {
                            "include": "#directive-values"
                        }
                    ]
                },
                {
                    "begin": "(?m)^(\\s*(?:-\\s*)?)(!arg)\\b",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.directive.arg.phlow"
                        }
                    },
                    "end": "$",
                    "name": "meta.directive.arg.phlow",
                    "patterns": [
                        {
                            "include": "#directive-values"
                        }
                    ]
                }
            ]
        },
        "modules": {
            "patterns": [
                {
                    "match": "(?m)^(\\s*(?:-\\s*)?)(module)(\\s*:\\s*)(\"[^\"]+\"|'[^']+'|[A-Za-z0-9_\\.\\/\\\\\\-]+)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.directive.module.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "entity.name.namespace.phlow"
                        }
                    },
                    "name": "meta.mapping.module.phlow"
                }
            ]
        },
        "constants-values": {
            "patterns": [
                {
                    "match": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)(\\b(?:main|modules|steps|envs|setup|input|args)\\b)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "entity.name.tag.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "constant.language.phlow"
                        }
                    }
                },
                {
                    "match": "(\\.\\.\\.)(\\b(?:main|modules|steps|envs|setup|input|args)\\b)",
                    "captures": {
                        "1": {
                            "name": "punctuation.separator.spread.phlow"
                        },
                        "2": {
                            "name": "constant.language.phlow"
                        }
                    }
                },
                {
                    "match": "(?m)^(\\s*-\\s*)(\\b(?:main|modules|steps|envs|setup|input|args)\\b)(?=\\s*$|\\s|,|\\])",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "constant.language.phlow"
                        }
                    }
                },
                {
                    "match": "\\b(?:main|modules|steps|envs|setup|input|args)\\b(?=\\[|\\.)",
                    "name": "constant.language.phlow"
                }
            ]
        },
        "directive-values": {
            "patterns": [
                {
                    "match": "(?x)([A-Za-z0-9_\\-\\.]+)(\\s*=\\s*)(\"[^\"]*\"|'[^']*'|[^\\s]+)",
                    "captures": {
                        "1": {
                            "name": "variable.parameter.phlow"
                        },
                        "2": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "3": {
                            "name": "string.unquoted.or.quoted.phlow"
                        }
                    }
                },
                {
                    "match": "\"[^\"]+\"",
                    "name": "string.quoted.double.phlow"
                },
                {
                    "match": "'[^']+'",
                    "name": "string.quoted.single.phlow"
                },
                {
                    "match": "[^\\s]+",
                    "name": "string.unquoted.path.phlow"
                }
            ]
        },
        "special-keys": {
            "patterns": [
                {
                    "match": "(?m)^(\\s*(?:-\\s*)?)\\b(then|else|return|id|assert|with|payload|to|use|label|input)\\b(?=\\s*:)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.control.phlow"
                        }
                    }
                }
            ]
        },
        "keys": {
            "patterns": [
                {
                    "match": "(?m)^(\\s*)(?:-\\s*)([a-zA-Z0-9_\\-\\.]+)(?=\\s*:)",
                    "captures": {
                        "2": {
                            "name": "entity.name.tag.phlow"
                        }
                    }
                },
                {
                    "match": "(?m)^(\\s*)([a-zA-Z0-9_\\-\\.]+)(?=\\s*:)",
                    "captures": {
                        "2": {
                            "name": "entity.name.tag.phlow"
                        }
                    }
                }
            ]
        }
    }
}